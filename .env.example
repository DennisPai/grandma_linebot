# Line Bot Configuration
LINE_CHANNEL_SECRET=your_channel_secret
LINE_CHANNEL_ACCESS_TOKEN=your_access_token

# Gemini AI - Free Tier KEY (for most features)
GEMINI_API_KEY_FREE=your_gemini_free_api_key_here
# Available models: gemini-3-flash-preview, gemini-2.5-pro, gemini-2.5-flash
# 請在後台系統配置頁面輸入您的免費版 Gemini API KEY

# Gemini AI - Paid Tier 1 KEY (for image generation)
GEMINI_API_KEY_PAID=your_gemini_paid_api_key_here
# Available models: gemini-3-pro-image-preview (realistic photos), gemini-2.5-flash-image (elder memes), gemini-3-pro-preview
# 請在後台系統配置頁面輸入您的付費版 Gemini API KEY

# Google Drive (optional, for permanent image storage)
GOOGLE_DRIVE_ENABLED=true
GOOGLE_DRIVE_CREDENTIALS={"type":"service_account","project_id":"..."}
GOOGLE_DRIVE_FOLDER_ID=your_folder_id

# n8n Integration
N8N_API_URL=your_n8n_api_url_here
N8N_API_KEY=your_n8n_api_key_here
# 請在後台系統配置頁面輸入您的 n8n API URL 和 API KEY

# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# NextAuth (Admin Dashboard Authentication)
NEXTAUTH_SECRET=your_nextauth_secret_generate_with_openssl
NEXTAUTH_URL=https://admin.your-domain.zeabur.app

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
LINE_LOGIN_CHANNEL_ID=your_line_login_channel_id
LINE_LOGIN_CHANNEL_SECRET=your_line_login_channel_secret

# Internal APIs
LINEBOT_API_URL=https://linebot.your-domain.zeabur.app
ADMIN_API_URL=https://admin.your-domain.zeabur.app
